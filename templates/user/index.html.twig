{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Création d'un nouvel utilisateur</h1>  
     <h4> {{ controller_name }} </h4>
</div>
    <form action="/createUser" method="post">
  <fieldset>
    <legend>Formulaire de création</legend>
     <div class="form-group">
      <label for="exampleInputNom">Nom</label>
      <input type="text" class="form-control" id="nom" name="nom" aria-describedby="NomHelp" placeholder="Entrer nom">
    </div>
    <div class="form-group">
      <label for="exampleInputPrenom">Prenom</label>
      <input type="text" class="form-control" id="prenom" name="prenom" aria-describedby="PrenomHelp" placeholder="Entrer Prenom">
    </div>
    <div class="form-group">
      <label for="exampleInputCode">Code</label>
      <input type="text" class="form-control" id="code" name="code" aria-describedby="CodeHelp" placeholder="Entrer Code">
    </div>
    <div class="form-group">
      <label for="exampleInputSalt">Salt</label>
      <input type="text" class="form-control" id="salt" name="salt" aria-describedby="SaltHelp" placeholder="Entrer Salt">
    </div>
    </form>
    <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
{% endblock %}
